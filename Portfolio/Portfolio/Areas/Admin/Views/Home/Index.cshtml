
@{
    ViewBag.Title = "AdminPanel - *ASB";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Portfolio - Admin</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="bootstrap-3/css/bootstrap.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">

</head>

<body style="background-color:#0c0c0c;">

    <div class="container" style="margin-top:135px;">
        <div class="row">
            <div class="col-md-4" style="margin:0 auto;">
                <h1 style="font-style:italic; margin-bottom:30px;letter-spacing:8px; font-size:35px;color:white; display:inline-block;">Portfolio </h1><span style="font-style:italic; color:#c43235;"> admins</span>
                <form method="post" action="@Url.Action("login","home")">
                    <div class="form-group">
                        <input type="text" name="Email" required class="form-control" placeholder="email " />
                    </div>
                    <div class="form-group">
                        <input type="password" required name="Password" class="form-control" placeholder="password" />
                    </div>
                    @if (Session["LoginInvalid"] != null)
                    {
                        Session["LoginInvalid"] = null;
                        <div class="alert alert-info">
                            Duzgun email ve ya password girin
                        </div>
                    }
                    <button type="submit" class="btn btn-primary btn-block" style="cursor:pointer;">Login</button>
                </form>
            </div>
        </div>
    </div>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="jquery/jquery-3.2.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ"
            crossorigin="anonymous"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
</body>

</html>
